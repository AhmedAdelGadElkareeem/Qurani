<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage
    x:Class="WytSky.Mobile.Maui.Skoola.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:WytSky.Mobile.Maui.Skoola.Views"
    xmlns:behaviors="clr-namespace:WytSky.Mobile.Maui.Skoola.Behaviors"
    xmlns:customControl="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl.Borderless"
    xmlns:customControls="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl"
    xmlns:resource="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources"
    xmlns:templates="clr-namespace:WytSky.Mobile.Maui.Skoola.Template"
    x:Name="root"
    Title="{x:Static resource:SharedResources.Text_Home}"
    IconImageSource="menu_home">
    <ScrollView>
        <Grid>
            <VerticalStackLayout Grid.Row="1">
                <Grid>
                    <Image
                        Aspect="AspectFill"
                        HeightRequest="150"
                        Source="background_header_image"
                        VerticalOptions="StartAndExpand" />
                    <Grid ColumnDefinitions="*,auto">
                        <VerticalStackLayout Margin="10,10,10,0">
                            <Image
                                Aspect="AspectFit"
                                HorizontalOptions="Start"
                                Source="avatar"
                                Style="{StaticResource ImageSize60}" />
                            <Label
                                Margin="0,5,0,0"
                                FontAttributes="Bold"
                                TextColor="{StaticResource White}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            FontFamily="ManropeBold"
                                            FontSize="16"
                                            Text="{x:Static resource:SharedResources.Text_Hi}" />
                                        <Span Text=", " />
                                        <Span
                                            FontFamily="ManropeBold"
                                            FontSize="16"
                                            Text="{Binding UserName}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label
                                Margin="0,5,0,0"
                                Style="{StaticResource RegularLabelFont14}"
                                Text="{x:Static resource:SharedResources.Text_WelcomeToQurani}"
                                TextColor="{StaticResource White}" />
                        </VerticalStackLayout>
                        <Image
                            Grid.Column="1"
                            Margin="20,0"
                            HeightRequest="65"
                            Source="white_logo"
                            WidthRequest="70" />
                    </Grid>
                </Grid>


                <!--<Frame
                    Margin="15,-20,15,0"
                    Padding="0"
                    CornerRadius="20">
                    <Grid Margin="10,0" ColumnDefinitions="auto,*,auto">
                        <Image Source="search" Style="{StaticResource ImageSize15}" />
                        <customControl:BorderlessEntry
                            Grid.Column="1"
                            FontFamily="ManropeBold"
                            FontSize="16"
                            TextColor="{StaticResource Black}" />
                        <Image
                            Grid.Column="2"
                            Source="filter"
                            Style="{StaticResource ImageSize30}" />
                    </Grid>
                </Frame>-->


                <CollectionView
                    x:Name="parentCategories"
                    Margin="15,10,15,0"
                    HeightRequest="600"
                    ItemsSource="{Binding Complexes}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="15" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Padding="0"
                                BackgroundColor="{Binding BackgroundColor}"
                                BorderColor="{StaticResource BorderColor}"
                                CornerRadius="5">
                                <Label
                                    Margin="15,5"
                                    HeightRequest="40"
                                    HorizontalOptions="CenterAndExpand"
                                    HorizontalTextAlignment="Center"
                                    Style="{StaticResource BoldLabelFont16}"
                                    Text="{Binding ComplexName}"
                                    TextColor="{Binding TextColor}" />

                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.SelectParentCategoryCommand}" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <customControls:EmptyView />
                    </CollectionView.EmptyView>
                </CollectionView>

            </VerticalStackLayout>
            <Grid Grid.Row="2">

                <Button
                    x:Name="FlyoutButton"
                    Grid.RowSpan="2"
                    Margin="20"
                    BackgroundColor="White"
                    Clicked="OnFlyoutButtonClicked"
                    CornerRadius="30"
                    FontSize="18"
                    HeightRequest="60"
                    HorizontalOptions="End"
                    Text="➕ Add"
                    TextColor="Blue"
                    VerticalOptions="End"
                    WidthRequest="60" />


                <VerticalStackLayout
                    x:Name="ComplexEntryLayout"
                    Grid.Row="1"
                    Padding="15"
                    BackgroundColor="White"
                    IsVisible="False"
                    VerticalOptions="End">
                    <Border />
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        HorizontalOptions="Center"
                        Text="أدخل اسم المجمع" />

                    <!--  Entry for Complex Name  -->
                    <Entry
                        x:Name="ComplexNameEntry"
                        BackgroundColor="White"
                        Text="{Binding ComplexxName, Mode=TwoWay}"
                        TextColor="Black" />

                    <!--  Button to Add Complex  -->
                    <Button
                        Margin="0,10,0,0"
                        Padding="10"
                        BackgroundColor="Blue"
                        Command="{Binding AddComplexCommand}"
                        FontSize="18"
                        Text="➕ إضافة مجمع"
                        TextColor="White" />
                    <Border />
                </VerticalStackLayout>
            </Grid>

            <ActivityIndicator IsRunning="{Binding IsRunning}" />
        </Grid>
    </ScrollView>

</base:BaseContentPage>
