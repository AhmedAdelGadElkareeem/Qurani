<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage
    x:Class="WytSky.Mobile.Maui.Skoola.Views.Students.StudentsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:WytSky.Mobile.Maui.Skoola.Views"
    xmlns:customControl="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl.Borderless"
    xmlns:customControls="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl"
    xmlns:res="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources"
    Title="Students Page"
    BackgroundColor="{StaticResource Gray100}">
    <Grid RowDefinitions="*">
        <Grid RowDefinitions="auto,*" VerticalOptions="FillAndExpand">
            <Border
                Padding="0"
                BackgroundColor="{StaticResource PrimaryColor}"
                HeightRequest="130"
                HorizontalOptions="FillAndExpand"
                Stroke="{StaticResource PrimaryColor}"
                StrokeShape="RoundRectangle 0,0,70,70"
                StrokeThickness=".5"
                VerticalOptions="Start">
                <VerticalStackLayout Margin="0" Padding="0">
                    <Label
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont18}"
                        Text="{Binding ComplexNamee}"
                        TextColor="{StaticResource DarkBlue}" />
                    <Label
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont16}"
                        Text="{Binding ComplexRegionName}"
                        TextColor="{StaticResource DarkBlue}" />
                    <Label
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont16}"
                        Text="{Binding ComplexRegionCountryName}"
                        TextColor="{StaticResource DarkBlue}" />
                    <Border
                        Margin="30,0,30,0"
                        Padding="0"
                        HeightRequest="40"
                        HorizontalOptions="FillAndExpand"
                        Stroke="{StaticResource Gray400}"
                        StrokeShape="RoundRectangle 20,20,20,20"
                        StrokeThickness=".5"
                        VerticalOptions="End">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Offset="0.1" Color="WhiteSmoke" />
                                <GradientStop Offset="1.0" Color="White" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Margin="0" Padding="0">
                            <!--  Entry for Search Text  -->
                            <customControl:BorderlessEntry
                                Margin="15,0"
                                FontFamily="AhlanWorldArbfonts"
                                Placeholder="{x:Static res:SharedResources.SearchByName}"
                                PlaceholderColor="{StaticResource DarkBlue}"
                                Style="{StaticResource BoldLabelFont16}"
                                Text="{Binding SearchText}"
                                TextColor="{StaticResource Black}" />

                            <!--  Clear Icon Button (Left Side)  -->
                            <Button
                                BackgroundColor="Transparent"
                                Command="{Binding ClearTextCommand}"
                                HorizontalOptions="Start"
                                IsVisible="{Binding SearchText, Converter={StaticResource StringToBoolConverter}}"
                                VerticalOptions="Center">
                                <!--<Button.ImageSource>
                        <FileImageSource File="clearfilter.png" />
                        </Button.ImageSource>-->
                            </Button>
                            <Button
                                BackgroundColor="Transparent"
                                Command="{Binding SearchCommand}"
                                HorizontalOptions="End"
                                VerticalOptions="Center">
                                <Button.ImageSource>
                                    <FileImageSource File="searchicon.png" />
                                </Button.ImageSource>
                            </Button>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </Border>
            <Grid>
                <CollectionView Margin="15,10,15,0" ItemsSource="{Binding Students}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <ContentView>
                                <Border Padding="5" StrokeShape="RoundRectangle 5">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0,1">
                                            <GradientStop Offset="0.1" Color="{StaticResource PrimaryColor}" />
                                            <GradientStop Offset="1.0" Color="{StaticResource LightGreen}" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Label
                                        HorizontalOptions="CenterAndExpand"
                                        Style="{StaticResource BoldLabelFont16}"
                                        Text="{Binding FullName}"
                                        TextColor="{StaticResource DarkBlue}" />
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.SelectStaffCommand}" CommandParameter="{Binding .}" />
                                    </Border.GestureRecognizers>
                                </Border>
                            </ContentView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <customControls:EmptyView />
                    </CollectionView.EmptyView>
                </CollectionView>
                <Button Command="{Binding OpenAddStudentCommand}" Style="{StaticResource AddButton}" />
            </Grid>
        </Grid>

        <ActivityIndicator IsRunning="{Binding IsRunning}" IsVisible="{Binding IsRunning}" />
    </Grid>
</base:BaseContentPage>