<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage
    x:Class="WytSky.Mobile.Maui.Skoola.Views.Complexes.ComplexesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:WytSky.Mobile.Maui.Skoola.Views"
    xmlns:behaviors="clr-namespace:WytSky.Mobile.Maui.Skoola.Behaviors"
    xmlns:customControl="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl.Borderless"
    xmlns:customControls="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl"
    xmlns:resource="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources"
    xmlns:templates="clr-namespace:WytSky.Mobile.Maui.Skoola.Template"
    x:Name="root"
    Title="{x:Static resource:SharedResources.Complexes}">

    <Grid RowDefinitions="*">

        <Grid RowDefinitions="auto,*" VerticalOptions="FillAndExpand">
            <Border
                Padding="0"
                BackgroundColor="{StaticResource PrimaryColor}"
                HeightRequest="100"
                HorizontalOptions="FillAndExpand"
                Stroke="{StaticResource Gray400}"
                StrokeShape="RoundRectangle 0,0,70,70"
                StrokeThickness=".5"
                VerticalOptions="Start">
                <Border
                    Margin="30,30,30,10"
                    Padding="0"
                    HeightRequest="50"
                    HorizontalOptions="FillAndExpand"
                    Stroke="{StaticResource Gray400}"
                    StrokeShape="RoundRectangle 20,20,20,20"
                    StrokeThickness=".5"
                    VerticalOptions="End">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Offset="0.1" Color="WhiteSmoke" />
                            <GradientStop Offset="1.0" Color="White" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <!--  Entry for Search Text  -->
                        <customControl:BorderlessEntry
                            Margin="10,0"
                            FontFamily="AhlanWorldArbfonts"
                            Placeholder="{x:Static resource:SharedResources.SearchByName}"
                            PlaceholderColor="{StaticResource DarkBlue}"
                            Style="{StaticResource BoldLabelFont16}"
                            Text="{Binding SearchText}"
                            TextColor="{StaticResource Black}" />

                        <!--  Clear Icon Button (Left Side)  -->
                        <Button
                            BackgroundColor="Transparent"
                            Command="{Binding ClearTextCommand}"
                            HorizontalOptions="Start"
                            IsVisible="{Binding SearchText, Converter={StaticResource StringToBoolConverter}}"
                            VerticalOptions="Center">
                            <!--<Button.ImageSource>
                                <FileImageSource File="clearfilter.png" />
                            </Button.ImageSource>-->
                        </Button>


                        <!--  Search Icon Button  -->
                        <Button
                            BackgroundColor="Transparent"
                            Command="{Binding SearchCommand}"
                            HorizontalOptions="End"
                            VerticalOptions="Center">
                            <Button.ImageSource>
                                <FileImageSource File="searchicon.png" />
                            </Button.ImageSource>
                        </Button>

                    </Grid>
                </Border>
            </Border>

            <Grid Grid.Row="1">
                <CollectionView Margin="15,10,15,0" ItemsSource="{Binding FilteredComplexes}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="15" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="5"
                                HeightRequest="140"
                                StrokeShape="RoundRectangle 20,20,20,20">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0,1">
                                        <GradientStop Offset="0.1" Color="{StaticResource PrimaryColor}" />
                                        <GradientStop Offset="1.0" Color="{StaticResource LightGreen}" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <VerticalStackLayout>
                                    <Label
                                        HorizontalOptions="CenterAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Style="{StaticResource BoldLabelFont16}"
                                        Text="{Binding CountryName}"
                                        TextColor="{StaticResource DarkBlue}" />
                                    <Label
                                        HorizontalOptions="CenterAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Style="{StaticResource BoldLabelFont16}"
                                        Text="{Binding RegionName}"
                                        TextColor="{StaticResource DarkBlue}" />
                                    <Label
                                        HorizontalOptions="CenterAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Style="{StaticResource BoldLabelFont18}"
                                        TextColor="{StaticResource DarkBlue}">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{x:Static resource:SharedResources.CentersNumber}" />
                                                <Span Text="{Binding CenterCount}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label
                                        HorizontalOptions="CenterAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Style="{StaticResource BoldLabelFont16}"
                                        Text="{Binding ComplexName}"
                                        TextColor="{StaticResource DarkBlue}" />
                                    <Label
                                        HorizontalOptions="CenterAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Style="{StaticResource BoldLabelFont16}"
                                        Text="{Binding SupervisorFullName}"
                                        TextColor="{StaticResource DarkBlue}" />
                                </VerticalStackLayout>

                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.SelectComplexCommand}" CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <customControls:EmptyView />
                    </CollectionView.EmptyView>
                </CollectionView>
                <Button Command="{Binding OpenAddComplexCommand}" Style="{StaticResource AddButton}" />
            </Grid>
        </Grid>

        <ActivityIndicator IsRunning="{Binding IsRunning}" IsVisible="{Binding IsRunning}" />

    </Grid>
</base:BaseContentPage>
