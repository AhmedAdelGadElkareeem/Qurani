<?xml version="1.0" encoding="utf-8" ?>

<pages:PopupPage
    x:Class="WytSky.Mobile.Maui.Skoola.Views.Staff.EditStaff"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Mopups.Pages;assembly=Mopups"
    xmlns:res="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources">
    <Frame
        Margin="20,10"
        Padding="10"
        BackgroundColor="White"
        CornerRadius="10"
        HeightRequest="560">
        <VerticalStackLayout>
            <StackLayout
                Margin="0,5,0,0"
                Spacing="3"
                VerticalOptions="FillAndExpand">

                <Label
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource BoldLabelFont18}"
                    Text="{Binding ComplexNamee}"
                    VerticalOptions="StartAndExpand" />
                <Label
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource RegularLabelFont18}"
                    Text="{Binding ComplexRegionName}" />
                <Label
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource BoldLabelFont18}"
                    Text="{Binding ComplexRegionCountryName}"
                    VerticalOptions="StartAndExpand" />
            </StackLayout>
            <Frame
                Margin="0,0,0,5"
                Padding="5"
                BackgroundColor="{StaticResource Orange}"
                CornerRadius="30"
                HorizontalOptions="CenterAndExpand">
                <Label
                    Margin="5"
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource BoldLabelFont18}"
                    Text="{x:Static res:SharedResources.EditTeachers}"
                    VerticalOptions="CenterAndExpand" />
            </Frame>
            <Grid ColumnDefinitions="*,*" RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto">

                <Label
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span
                                FontAttributes="Bold"
                                FontFamily="ManropeBold"
                                FontSize="15"
                                Text="{x:Static res:SharedResources.Text_UserName}"
                                TextColor="{StaticResource AmericanExpress}" />
                            <Span Text=" : " />
                            <Span
                                FontFamily="ManropeBold"
                                FontSize="Medium"
                                Text="{Binding UserName}"
                                TextColor="{StaticResource AmericanExpress}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <!--<Label
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Style="{StaticResource BoldLabelFont16}"
                    Text="{x:Static res:SharedResources.Text_Email}"
                    TextColor="{StaticResource AmericanExpress}" />
                <Entry
                    Grid.Row="1"
                    Grid.Column="1"
                    BackgroundColor="White"
                    HorizontalTextAlignment="Center"
                    Placeholder="{x:Static res:SharedResources.Text_Email}"
                    Text="{Binding Email, Mode=TwoWay}"
                    TextColor="Black" />-->

                <Label
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span
                                FontAttributes="Bold"
                                FontFamily="ManropeBold"
                                FontSize="15"
                                Text="{x:Static res:SharedResources.Text_Email}"
                                TextColor="{StaticResource AmericanExpress}" />
                            <Span Text=" : " />
                            <Span
                                FontFamily="ManropeBold"
                                FontSize="Medium"
                                Text="{Binding Email}"
                                TextColor="{StaticResource AmericanExpress}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Style="{StaticResource BoldLabelFont16}"
                    Text="{x:Static res:SharedResources.Text_FirstName}"
                    TextColor="{StaticResource AmericanExpress}" />
                <Entry
                    Grid.Row="2"
                    Grid.Column="1"
                    BackgroundColor="White"
                    HorizontalTextAlignment="Center"
                    Placeholder="{x:Static res:SharedResources.Text_FirstName}"
                    Text="{Binding FirstName, Mode=TwoWay}"
                    TextColor="Black" />

                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Style="{StaticResource BoldLabelFont16}"
                    Text="{x:Static res:SharedResources.Text_LastName}"
                    TextColor="{StaticResource AmericanExpress}" />
                <Entry
                    Grid.Row="3"
                    Grid.Column="1"
                    BackgroundColor="White"
                    HorizontalTextAlignment="Center"
                    Placeholder="{x:Static res:SharedResources.Text_LastName}"
                    Text="{Binding LastName, Mode=TwoWay}"
                    TextColor="Black" />

                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Style="{StaticResource BoldLabelFont16}"
                    Text="{x:Static res:SharedResources.Centers}"
                    TextColor="{StaticResource AmericanExpress}" />
                <Picker
                    Title="{x:Static res:SharedResources.Centers}"
                    Grid.Row="4"
                    Grid.Column="1"
                    HorizontalTextAlignment="Center"
                    ItemDisplayBinding="{Binding CenterName}"
                    ItemsSource="{Binding Centers}"
                    SelectedItem="{Binding SelectedCenter, Mode=TwoWay}"
                    TextColor="{StaticResource Black}"
                    TitleColor="{StaticResource Black}" />

                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Style="{StaticResource BoldLabelFont16}"
                    Text="{x:Static res:SharedResources.Text_Mobile}"
                    TextColor="{StaticResource AmericanExpress}" />
                <Entry
                    Grid.Row="5"
                    Grid.Column="1"
                    BackgroundColor="White"
                    HorizontalTextAlignment="Center"
                    Keyboard="Numeric"
                    Placeholder="{x:Static res:SharedResources.Text_Mobile}"
                    Text="{Binding Mobile, Mode=TwoWay}"
                    TextColor="Black" />

                <Label
                    Grid.Row="6"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    Style="{StaticResource BoldLabelFont16}"
                    Text="{x:Static res:SharedResources.Staffs}"
                    TextColor="{StaticResource AmericanExpress}" />
                <Picker
                    Title="{x:Static res:SharedResources.Text_StaffTypes}"
                    Grid.Row="6"
                    Grid.Column="1"
                    HorizontalTextAlignment="Center"
                    ItemDisplayBinding="{Binding TypeName}"
                    ItemsSource="{Binding StaffTypes}"
                    SelectedItem="{Binding SelectedStaffType, Mode=TwoWay}"
                    TextColor="{StaticResource Black}"
                    TitleColor="{StaticResource Black}" />
            </Grid>

            <Button
                Command="{Binding EditStaffCommand}"
                Style="{StaticResource BaseButton}"
                Text="{x:Static res:SharedResources.Text_Save}"
                TextColor="{StaticResource DarkBlue}" />

        </VerticalStackLayout>
    </Frame>
</pages:PopupPage>