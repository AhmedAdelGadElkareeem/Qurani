<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WytSky.Mobile.Maui.Skoola.Views.Quarni.Students.StudentsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customControls="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl"
    xmlns:res="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources"
    Title="Students Page"
    BackgroundColor="{StaticResource Gray100}">
    <Grid>
        <Grid>
            <CollectionView Margin="15,10,15,0" 
                            ItemsSource="{Binding Students}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <ContentView>
                            <Border
                                Margin="10"
                                BackgroundColor="{StaticResource White}"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="1">
                                <VerticalStackLayout>
                                    <Label Style="{StaticResource RegularLabelFont12}" Text="{Binding StudentCountryName}" />
                                    <Label Style="{StaticResource RegularLabelFont12}" Text="{Binding StudentRegionName}" />
                                    <Label Style="{StaticResource RegularLabelFont12}" Text="{Binding StudentGroupName}" />
                                    <Label Style="{StaticResource RegularLabelFont12}" Text="{Binding StudentComplexName}" />
                                    <Label Style="{StaticResource RegularLabelFont12}" Text="{Binding GroupCenterName}" />
                                    <Label Style="{StaticResource RegularLabelFont12}" Text="{Binding GroupTeacherFirstName}" />
                                    <Label Style="{StaticResource RegularLabelFont12}" Text="{Binding StudentFullName}" />
                                </VerticalStackLayout>
                            </Border>
                        </ContentView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <customControls:EmptyView />
                </CollectionView.EmptyView>
            </CollectionView>
            <Button Style="{StaticResource AddButton}" Command="{Binding OpenAddStudentCommand}"/>
        </Grid>
        <ActivityIndicator IsRunning="{Binding IsRunning}" IsVisible="{Binding IsRunning}" />
    </Grid>
</ContentPage>