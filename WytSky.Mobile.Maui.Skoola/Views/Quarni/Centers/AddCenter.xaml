<?xml version="1.0" encoding="utf-8"?>

<pages:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:pages="clr-namespace:Mopups.Pages;assembly=Mopups"
                  x:Class="WytSky.Mobile.Maui.Skoola.Views.Quarni.Centers.AddCenter">
        <Frame
                Padding="15"
                HeightRequest="250"
                Margin="10,0"
                BackgroundColor="White" VerticalOptions="CenterAndExpand"
                CornerRadius="20">
                <VerticalStackLayout>
                    <Entry
                        BackgroundColor="White"
                        Placeholder="اسم المسجد عربي"
                        HorizontalTextAlignment="Center"
                        Text="{Binding CenterName, Mode=TwoWay}"
                        TextColor="Black" />

                    <Entry
                        BackgroundColor="White"
                        HorizontalTextAlignment="Center"
                        Placeholder="اسم المسجد انجليزي"
                        Text="{Binding CenterNameEn, Mode=TwoWay}"
                        TextColor="Black" />
                  
                    <Entry
                        x:Name="CityEntry"
                        BackgroundColor="White"
                        Placeholder="أسم الحـى"
                        HorizontalTextAlignment="Center"
                        Text="{Binding Address, Mode=TwoWay}"
                        TextColor="Black" />

                    <Button
                        Margin="0, 20,0,0"
                        Padding="10"
                        BackgroundColor="Blue"
                        Command="{Binding AddCenterCommand}"
                        Text="اضافه"
                        TextColor="White" />
                </VerticalStackLayout>
            </Frame>
</pages:PopupPage >