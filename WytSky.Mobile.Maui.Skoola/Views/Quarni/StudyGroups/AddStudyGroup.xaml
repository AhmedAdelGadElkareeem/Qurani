<?xml version="1.0" encoding="utf-8"?>

<pages:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:pages="clr-namespace:Mopups.Pages;assembly=Mopups"
                 xmlns:res="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources"
                 x:Class="WytSky.Mobile.Maui.Skoola.Views.Quarni.StudyGroups.AddStudyGroup">
    <Frame HeightRequest="300" 
           Margin="20,10"
           BackgroundColor="White"
           CornerRadius="10">
        <VerticalStackLayout Margin="5,0">
            <Entry Text="{Binding StudyGroupName}"
                   Placeholder="{x:Static res:SharedResources.Text_FullName}"/>
            <Button Style="{StaticResource BaseButton}"
                    Command="{Binding AddStudyGroupCommand}"
                    Text="{x:Static res:SharedResources.Text_Save}"/>
        </VerticalStackLayout>
    </Frame>
</pages:PopupPage>