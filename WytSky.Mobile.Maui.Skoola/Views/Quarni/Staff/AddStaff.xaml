<?xml version="1.0" encoding="utf-8" ?>

<pages:PopupPage
    x:Class="WytSky.Mobile.Maui.Skoola.Views.Quarni.Staff.AddStaff"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Mopups.Pages;assembly=Mopups">
    <Grid Padding="15" VerticalOptions="End">
        <Frame
            x:Name="ComplexEntryLayout"
            Padding="15"
            BackgroundColor="White"
            CornerRadius="20"
            IsVisible="{Binding IsComplexEntryVisible, Mode=TwoWay}">
            <VerticalStackLayout>
                <Entry
                    BackgroundColor="White"
                    Placeholder="الاسم ألاول"
                    Text="{Binding FirstName, Mode=TwoWay}"
                    TextColor="Black" />
                <Entry
                    BackgroundColor="White"
                    Placeholder="اسم العائلة"
                    Text="{Binding LastName, Mode=TwoWay}"
                    TextColor="Black" />

                <Button
                    Margin="0,10,0,0"
                    Padding="10"
                    BackgroundColor="Blue"
                    Command="{Binding AddStaffCommand}"
                    Text="➕ Add Staff"
                    TextColor="White" />
            </VerticalStackLayout>
        </Frame>
    </Grid>
</pages:PopupPage>