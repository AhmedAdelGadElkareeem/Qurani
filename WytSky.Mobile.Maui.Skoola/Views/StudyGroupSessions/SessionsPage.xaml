<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WytSky.Mobile.Maui.Skoola.Views.StudyGroupSessions.SessionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:WytSky.Mobile.Maui.Skoola.Behaviors"
    xmlns:customControl="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl.Borderless"
    xmlns:customControls="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl"
    xmlns:resource="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources"
    Title="{x:Static resource:SharedResources.Txt_Sessions}">
    <Grid RowDefinitions="*">
        <Grid RowDefinitions="auto,*" VerticalOptions="FillAndExpand">

            <Border
                Padding="0"
                BackgroundColor="{StaticResource PrimaryColor}"
                HeightRequest="130"
                HorizontalOptions="FillAndExpand"
                Stroke="{StaticResource PrimaryColor}"
                StrokeShape="RoundRectangle 0,0,70,70"
                StrokeThickness=".5"
                VerticalOptions="Start">
                <Grid
                    Margin="0"
                    Padding="0"
                    RowDefinitions="auto,auto,auto,*">
                    <Label
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont18}"
                        Text="{Binding ComplexNamee}"
                        TextColor="{StaticResource DarkBlue}" />
                    <Label
                        Grid.Row="1"
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont16}"
                        Text="{Binding CenterName}"
                        TextColor="{StaticResource DarkBlue}" />
                    <Label
                        Grid.Row="2"
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont16}"
                        Text="{Binding GroupName}"
                        TextColor="{StaticResource DarkBlue}" />
                    <Border
                        Grid.Row="4"
                        Margin="30,0,30,0"
                        Padding="0"
                        HeightRequest="40"
                        HorizontalOptions="FillAndExpand"
                        Stroke="{StaticResource Gray400}"
                        StrokeShape="RoundRectangle 20,20,20,20"
                        StrokeThickness=".5"
                        VerticalOptions="End">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Offset="0.1" Color="WhiteSmoke" />
                                <GradientStop Offset="1.0" Color="White" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Margin="0" Padding="0">
                            <!--  Entry for Search Text  -->
                            <customControl:BorderlessEntry
                                Margin="15,0"
                                FontFamily="AhlanWorldArbfonts"
                                Placeholder="{x:Static resource:SharedResources.SearchByName}"
                                PlaceholderColor="{StaticResource DarkBlue}"
                                Style="{StaticResource BoldLabelFont16}"
                                Text="{Binding SearchText}"
                                TextColor="{StaticResource Black}" />

                            <!--  Clear Icon Button (Left Side)  -->
                            <Button
                                BackgroundColor="Transparent"
                                Command="{Binding ClearTextCommand}"
                                HorizontalOptions="Start"
                                IsVisible="{Binding SearchText}"
                                VerticalOptions="Center">
                                <!--<Button.ImageSource>
                                <FileImageSource File="clearfilter.png" />
                                </Button.ImageSource>-->
                            </Button>
                            <Button
                                BackgroundColor="Transparent"
                                Command="{Binding SearchCommand}"
                                HorizontalOptions="End"
                                VerticalOptions="Center">
                                <Button.ImageSource>
                                    <FileImageSource File="searchicon.png" />
                                </Button.ImageSource>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <Grid Grid.Row="1" RowDefinitions="auto,*">

                <Border
                    Margin="10,5"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    HorizontalOptions="CenterAndExpand"
                    Stroke="{StaticResource PrimaryColor}"
                    StrokeShape="RoundRectangle 20,20,20,20"
                    StrokeThickness=".5">
                    <CarouselView
                        x:Name="parentCategories"
                        Margin="5,5"
                        HeightRequest="180"
                        ItemsSource="{Binding Filteredsessions}"
                        Loop="False">
                        <CarouselView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                        </CarouselView.ItemsLayout>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,10"
                                    Padding="10"
                                    Background="{StaticResource White}"
                                    HorizontalOptions="CenterAndExpand"
                                    Stroke="{StaticResource PrimaryColor}"
                                    StrokeShape="RoundRectangle 20,20,20,20"
                                    StrokeThickness=".5">
                                    <Grid RowDefinitions="auto,*,*">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Medium"
                                            HorizontalOptions="Center"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding GroupTeacherFullName}"
                                            TextColor="{StaticResource Black}" />

                                        <!--  Start & End Time  -->
                                        <Grid
                                            Grid.Row="1"
                                            Margin="0,5,0,0"
                                            RowDefinitions="auto,*">
                                            <!--  Day of the Week  -->
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="Medium"
                                                HorizontalOptions="CenterAndExpand"
                                                Text="{Binding DayOfWeekName}"
                                                TextColor="{StaticResource Black}" />
                                            <HorizontalStackLayout
                                                Grid.Row="2"
                                                HorizontalOptions="Center"
                                                Spacing="5">

                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="14"
                                                    Text="{x:Static resource:SharedResources.FromDate}"
                                                    TextColor="Black" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="15"
                                                    Text="{Binding StartTime, StringFormat='{0:hh\\:mm}'}"
                                                    TextColor="{StaticResource Black}" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="14"
                                                    Text="{x:Static resource:SharedResources.ToDate}"
                                                    TextColor="Black" />
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="15"
                                                    Text="{Binding EndTime, StringFormat='{0:hh\\:mm}'}"
                                                    TextColor="{StaticResource Black}" />
                                            </HorizontalStackLayout>

                                        </Grid>

                                        <Grid
                                            Grid.Row="2"
                                            Margin="15"
                                            ColumnDefinitions="*,*"
                                            ColumnSpacing="5"
                                            HeightRequest="25"
                                            VerticalOptions="End">
                                            <Button
                                                Grid.Column="0"
                                                BackgroundColor="{StaticResource PrimaryColor}"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type CarouselView}}, Path=BindingContext.OpenAttendanceCommand}"
                                                CommandParameter="{Binding .}"
                                                FontAttributes="Bold"
                                                Style="{StaticResource BaseButton}"
                                                Text="{x:Static resource:SharedResources.Txt_Attendance}" />
                                            <Button
                                                Grid.Column="1"
                                                BackgroundColor="{StaticResource PrimaryColor}"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type CarouselView}}, Path=BindingContext.OpenEvuluationCommand}"
                                                CommandParameter="{Binding .}"
                                                FontAttributes="Bold"
                                                Style="{StaticResource BaseButton}"
                                                Text="{x:Static resource:SharedResources.txt_attendanceevulate}" />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>

                        <CarouselView.EmptyView>
                            <customControls:EmptyView />
                        </CarouselView.EmptyView>
                    </CarouselView>
                </Border>

                <Grid Grid.Row="1">
                    <!--  List of Student Evaluations  -->
                    <CollectionView IsVisible="{Binding IsEvulationVisible}" ItemsSource="{Binding FilteredEvuluation}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                    Margin="10,5"
                                    Padding="15"
                                    BorderColor="LightGray"
                                    CornerRadius="10"
                                    HasShadow="True">
                                    <VerticalStackLayout Spacing="10">

                                        <!--  Student Name  -->
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="18"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="{Binding StudentFullName}" />

                                        <!--  Evaluation Scores with Labels in Rows  -->
                                        <Grid
                                            ColumnDefinitions="*,*"
                                            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                                            VerticalOptions="Start">

                                            <!--  Tajweed Score  -->
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                HorizontalOptions="Start"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{x:Static resource:SharedResources.Txt_Tajweed_Evaluate}" />
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                HorizontalOptions="End"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{Binding TajweedScore}" />

                                            <!--  Memorization Score  -->
                                            <Label
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                HorizontalOptions="Start"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{x:Static resource:SharedResources.Txt_Memorization_Evaluate}" />
                                            <Label
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                HorizontalOptions="End"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{Binding MemorizationScore}" />

                                            <!--  Understanding Score  -->
                                            <Label
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                HorizontalOptions="Start"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{x:Static resource:SharedResources.Txt_Understanding_Evaluate}" />
                                            <Label
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                HorizontalOptions="End"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{Binding UnderstandingScore}" />

                                            <!--  Behavior Score  -->
                                            <Label
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                HorizontalOptions="Start"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{x:Static resource:SharedResources.Txt_Behavior_Evaluation}" />
                                            <Label
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                HorizontalOptions="End"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{Binding BehaviorScore}" />

                                            <!--  Attendance Score  -->
                                            <Label
                                                Grid.Row="4"
                                                Grid.Column="0"
                                                HorizontalOptions="Start"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{x:Static resource:SharedResources.txt_attendanceevulate}" />
                                            <Label
                                                Grid.Row="4"
                                                Grid.Column="1"
                                                HorizontalOptions="End"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{Binding AttendanceScore}" />

                                        </Grid>

                                        <!--  Notes Section  -->
                                        <VerticalStackLayout Spacing="5">
                                            <Label
                                                HorizontalOptions="CenterAndExpand"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{x:Static resource:SharedResources.Text_Notes}" />
                                            <Label
                                                HorizontalOptions="CenterAndExpand"
                                                Style="{StaticResource BoldLabelFont16}"
                                                Text="{Binding Notes}" />
                                        </VerticalStackLayout>

                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <CollectionView
                        Grid.Row="1"
                        Margin="15,10,15,0"
                        IsVisible="{Binding IsStudentVisible}"
                        ItemsSource="{Binding FilteredAttendance}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="15" Orientation="Vertical" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="5"
                                    Background="{StaticResource PrimaryColor}"
                                    HeightRequest="50"
                                    StrokeShape="RoundRectangle 5">
                                    <Grid ColumnDefinitions="*">
                                        <Label
                                            Grid.Column="1"
                                            HorizontalOptions="CenterAndExpand"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{Binding StudentFullName}"
                                            TextColor="{StaticResource Black}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <customControls:EmptyView />
                        </CollectionView.EmptyView>
                    </CollectionView>
                </Grid>
            </Grid>

        </Grid>
        <ActivityIndicator IsRunning="{Binding IsRunning}" IsVisible="{Binding IsRunning}" />
    </Grid>
</ContentPage>
