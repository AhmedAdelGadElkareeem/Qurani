<ContentPage
    x:Class="WytSky.Mobile.Maui.Skoola.Views.StudyGroupSessions.StudyGroupSessionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:WytSky.Mobile.Maui.Skoola.Behaviors"
    xmlns:customControl="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl.Borderless"
    xmlns:customControls="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl"
    xmlns:res="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources"
    xmlns:resource="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources"
    Title="{x:Static res:SharedResources.StudyGroupSessions}">

    <Grid RowDefinitions="Auto,Auto,*,Auto">

        <!--  Header Section  -->
        <Border
            Padding="0"
            BackgroundColor="{StaticResource PrimaryColor}"
            HeightRequest="130"
            HorizontalOptions="FillAndExpand"
            Stroke="{StaticResource PrimaryColor}"
            StrokeShape="RoundRectangle 0,0,70,70"
            StrokeThickness="0.5"
            VerticalOptions="Start">
            <Grid
                Margin="0"
                Padding="0"
                RowDefinitions="Auto,Auto,Auto,Auto">
                <Label
                    HorizontalOptions="CenterAndExpand"
                    Style="{StaticResource BoldLabelFont18}"
                    Text="{Binding ComplexNamee}"
                    TextColor="{StaticResource DarkBlue}" />
                <Label
                    Grid.Row="1"
                    HorizontalOptions="CenterAndExpand"
                    Style="{StaticResource BoldLabelFont16}"
                    Text="{Binding CenterName}"
                    TextColor="{StaticResource DarkBlue}" />
                <Label
                    Grid.Row="2"
                    HorizontalOptions="CenterAndExpand"
                    Style="{StaticResource BoldLabelFont16}"
                    Text="{Binding GroupName}"
                    TextColor="{StaticResource DarkBlue}" />


            </Grid>
        </Border>

        <!--  Session Details Section  -->
        <Grid Grid.Row="1">
            <Border
                Margin="5"
                Padding="10"
                HorizontalOptions="FillAndExpand"
                Stroke="{StaticResource PrimaryColor}"
                StrokeShape="RoundRectangle 20"
                StrokeThickness="0.5">
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout BackgroundColor="White">
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="{Binding Session.GroupTeacherFullName}"
                            TextColor="{StaticResource Black}" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="{Binding SessionSchedule.DayOfWeekName}"
                            TextColor="{StaticResource Black}" />
                        <HorizontalStackLayout Spacing="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{x:Static resource:SharedResources.FromDate}"
                                TextColor="Black" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="15"
                                Text="{Binding SessionSchedule.StartTime, StringFormat='{0:hh\:mm}'}"
                                TextColor="{StaticResource Black}" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{x:Static resource:SharedResources.ToDate}"
                                TextColor="Black" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="15"
                                Text="{Binding SessionSchedule.EndTime, StringFormat='{0:hh\:mm}'}"
                                TextColor="{StaticResource Black}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    <Button
                        Grid.Column="1"
                        BackgroundColor="{StaticResource PrimaryColor}"
                        Command="{Binding StartSesionCommand}"
                        FontAttributes="Bold"
                        FontSize="16"
                        HorizontalOptions="End"
                        Text="{x:Static resource:SharedResources.Txt_StartSession}"
                        TextColor="{StaticResource Black}" />
                </Grid>
            </Border>
        </Grid>

        <!--  Students List  -->
        <Grid Grid.Row="2" IsVisible="{Binding IsStudentVisible}">
            <CollectionView Margin="15,10,15,0" ItemsSource="{Binding Students}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="15" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Padding="5"
                            Background="{StaticResource PrimaryColor}"
                            HeightRequest="50"
                            StrokeShape="RoundRectangle 5">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label
                                    Grid.Column="1"
                                    HorizontalOptions="End"
                                    Style="{StaticResource BoldLabelFont16}"
                                    Text="{Binding StudentFullName}"
                                    TextColor="{StaticResource Black}" />
                                <Button
                                    Grid.Column="0"
                                    BackgroundColor="White"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.AddStudentAttendanceCommand}"
                                    CommandParameter="{Binding .}"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HorizontalOptions="Start"
                                    Text="{x:Static resource:SharedResources.Txt_Attendance}"
                                    TextColor="{StaticResource PrimaryColor}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <customControls:EmptyView />
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>

        <!--  Evaluation Button  -->
        <Button
            Grid.Row="3"
            Margin="20"
            BackgroundColor="{StaticResource PrimaryColor}"
            Command="{Binding OpenEvaluationPageCommand}"
            FontAttributes="Bold"
            FontSize="16"
            HeightRequest="50"
            HorizontalOptions="Fill"
            Text="{x:Static resource:SharedResources.Add_Evaluation}"
            TextColor="{StaticResource Black}" />
    </Grid>
</ContentPage>
