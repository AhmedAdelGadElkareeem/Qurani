<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    x:Class="WytSky.Mobile.Maui.Skoola.Views.Students.UpdateStudentPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Mopups.Pages;assembly=Mopups"
    xmlns:res="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources">

    <Frame
        Margin="20,10"
        Padding="10"
        BackgroundColor="White"
        CornerRadius="10"
        HeightRequest="390">
        <VerticalStackLayout>
            <StackLayout
                Margin="0,5,0,0"
                Spacing="3"
                VerticalOptions="FillAndExpand">

                <Label
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource BoldLabelFont18}"
                    Text="{Binding ComplexNamee}"
                    VerticalOptions="StartAndExpand" />
                <Label
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource RegularLabelFont18}"
                    Text="{Binding ComplexRegionName}" />
                <Label
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource BoldLabelFont18}"
                    Text="{Binding ComplexRegionCountryName}"
                    VerticalOptions="StartAndExpand" />
            </StackLayout>
            <Frame
                Margin="0,0,0,5"
                Padding="5"
                BackgroundColor="{StaticResource Orange}"
                CornerRadius="30"
                HorizontalOptions="CenterAndExpand">
                <Label
                    Margin="5"
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource BoldLabelFont18}"
                    Text="{x:Static res:SharedResources.UpdateAttendance}"
                    VerticalOptions="CenterAndExpand" />
            </Frame>

            <Grid ColumnDefinitions="*,*">

                <!--<Label
                    Grid.ColumnSpan="1"
                    HorizontalOptions="Start"
                    Style="{StaticResource BoldLabelFont16}"
                    Text="{x:Static res:SharedResources.Text_FullName}"
                    TextColor="{StaticResource AmericanExpress}" />-->
                <Label
                    Grid.ColumnSpan="2"
                    BackgroundColor="White"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HorizontalTextAlignment="Center"
                    Text="{Binding StudentName}"
                    TextColor="Black" />
            </Grid>
            <Grid ColumnDefinitions="*,auto">

                <Label
                    Grid.Column="1"
                    HorizontalOptions="Start"
                    Style="{StaticResource BoldLabelFont16}"
                    Text="{x:Static res:SharedResources.Status}"
                    TextColor="{StaticResource AmericanExpress}" />
                <Picker
                    Title="{Binding Status}"
                    Grid.Column="0"
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="Center"
                    ItemDisplayBinding="{Binding DisplayName}"
                    ItemsSource="{Binding AttendanceOptions}"
                    SelectedItem="{Binding SelectedOption, Mode=TwoWay}"
                    TextColor="{StaticResource Black}"
                    TitleColor="{StaticResource Black}" />
            </Grid>

            <Button
                Command="{Binding UpdateStudentAttendanceCommand}"
                Style="{StaticResource BaseButton}"
                Text="{x:Static res:SharedResources.Text_Save}"
                TextColor="{StaticResource DarkBlue}" />

        </VerticalStackLayout>
    </Frame>
</pages:PopupPage>
