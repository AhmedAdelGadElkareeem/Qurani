<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WytSky.Mobile.Maui.Skoola.Views.StudyGroupStudentList.StudyGroupSessionDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:WytSky.Mobile.Maui.Skoola.Views"
    xmlns:behaviors="clr-namespace:WytSky.Mobile.Maui.Skoola.Behaviors"
    xmlns:customControl="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl.Borderless"
    xmlns:customControls="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl"
    xmlns:resource="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources"
    Title="{x:Static resource:SharedResources.SessionDetails}">
    <Grid RowDefinitions="*">
        <Grid RowDefinitions="auto,*,auto" VerticalOptions="FillAndExpand">

            <!--  Header  -->
            <Border
                Padding="0"
                BackgroundColor="{StaticResource PrimaryColor}"
                HeightRequest="130"
                HorizontalOptions="FillAndExpand"
                Stroke="{StaticResource PrimaryColor}"
                StrokeShape="RoundRectangle 0,0,70,70"
                StrokeThickness=".5"
                VerticalOptions="Start">
                <Grid
                    Margin="0"
                    Padding="0"
                    RowDefinitions="auto,auto,auto,*">
                    <Label
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont18}"
                        Text="{Binding ComplexNamee}"
                        TextColor="{StaticResource DarkBlue}" />
                    <Label
                        Grid.Row="1"
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont16}"
                        Text="{Binding CenterName}"
                        TextColor="{StaticResource DarkBlue}" />
                    <Label
                        Grid.Row="2"
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont16}"
                        Text="{Binding GroupName}"
                        TextColor="{StaticResource DarkBlue}" />
                    <Border
                        Grid.Row="4"
                        Margin="30,0,30,0"
                        Padding="0"
                        HeightRequest="40"
                        HorizontalOptions="FillAndExpand"
                        Stroke="{StaticResource Gray400}"
                        StrokeShape="RoundRectangle 20,20,20,20"
                        StrokeThickness=".5"
                        VerticalOptions="End">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Offset="0.1" Color="WhiteSmoke" />
                                <GradientStop Offset="1.0" Color="White" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Margin="0" Padding="0">
                            <!--  Entry for Search Text  -->
                            <customControl:BorderlessEntry
                                Margin="15,0"
                                FontFamily="ManropeBold"
                                Placeholder="{x:Static resource:SharedResources.SearchByName}"
                                PlaceholderColor="{StaticResource DarkBlue}"
                                Style="{StaticResource BoldLabelFont16}"
                                Text="{Binding SearchText}"
                                TextColor="{StaticResource Black}" />

                            <!--  Clear Icon Button (Left Side)  -->
                            <Button
                                BackgroundColor="Transparent"
                                Command="{Binding ClearTextCommand}"
                                HorizontalOptions="Start"
                                IsVisible="{Binding SearchText}"
                                VerticalOptions="Center">
                                <!--<Button.ImageSource>
                                <FileImageSource File="clearfilter.png" />
                                </Button.ImageSource>-->
                            </Button>
                            <Button
                                BackgroundColor="Transparent"
                                Command="{Binding SearchCommand}"
                                HorizontalOptions="End"
                                VerticalOptions="Center">
                                <Button.ImageSource>
                                    <FileImageSource File="searchicon.png" />
                                </Button.ImageSource>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!--  Attendance Section  -->
            <Grid Grid.Row="1" IsVisible="{Binding IsAttendnaceVisible}">
                <CollectionView Margin="0,10" ItemsSource="{Binding FilteredAttendance}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="15" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="5"
                                Background="{StaticResource PrimaryColor}"
                                HeightRequest="50"
                                StrokeShape="RoundRectangle 5">
                                <Grid ColumnDefinitions="auto,auto,*">
                                    <!--<Label
                            Style="{StaticResource BoldLabelFont16}"
                            Text="{Binding StudentStatus}"
                            TextColor="{StaticResource AmericanExpress}" />-->
                                    <ImageButton
                                        Margin="15,0,15,0"
                                        BackgroundColor="Transparent"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.OpenUpdateStudentCommand}"
                                        CommandParameter="{Binding .}"
                                        HeightRequest="25"
                                        HorizontalOptions="End"
                                        Source="editt.png"
                                        VerticalOptions="Start"
                                        WidthRequest="25" />
                                    <!--  Status  -->
                                    <Label
                                        Grid.Column="1"
                                        Style="{StaticResource BoldLabelFont20}"
                                        Text="{Binding StudentStatus}">
                                        <Label.Triggers>
                                            <!--  Present (Green)  -->
                                            <DataTrigger
                                                Binding="{Binding Status}"
                                                TargetType="Label"
                                                Value="1">
                                                <Setter Property="TextColor" Value="Green" />
                                            </DataTrigger>

                                            <!--  Not Present (Red)  -->
                                            <DataTrigger
                                                Binding="{Binding Status}"
                                                TargetType="Label"
                                                Value="2">
                                                <Setter Property="TextColor" Value="Red" />
                                            </DataTrigger>

                                            <!--  If Status is null or not recognized  -->
                                            <DataTrigger
                                                Binding="{Binding Status}"
                                                TargetType="Label"
                                                Value="{x:Null}">
                                                <Setter Property="TextColor" Value="Orange" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>

                                    <Label Grid.Column="2" HorizontalTextAlignment="End">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span
                                                    FontAttributes="Bold"
                                                    FontFamily="ManropeBold"
                                                    FontSize="15"
                                                    Text="{x:Static resource:SharedResources.Text_Student}"
                                                    TextColor="{StaticResource AmericanExpress}" />
                                                <Span Text=" : " />
                                                <Span
                                                    FontAttributes="Bold"
                                                    FontFamily="ManropeBold"
                                                    FontSize="Medium"
                                                    Text="{Binding StudentFullName}"
                                                    TextColor="{StaticResource Black}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <customControls:EmptyView />
                    </CollectionView.EmptyView>
                </CollectionView>
            </Grid>

            <!--  Evalutaion Section  -->
            <Grid Grid.Row="1" IsVisible="{Binding IsEvulationVisible}">
                <!--  List of Student Evaluations  -->
                <CollectionView Margin="0,10" ItemsSource="{Binding FilteredEvuluation}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="10,5"
                                Padding="15"
                                BorderColor="LightGray"
                                CornerRadius="10"
                                HasShadow="True">
                                <VerticalStackLayout Spacing="10">

                                    <Grid ColumnDefinitions="auto,*">
                                        <ImageButton
                                            Grid.Column="0"
                                            Margin="5"
                                            BackgroundColor="Transparent"
                                            Command="{Binding Path=BindingContext.OpenUpdateStudentEvuluationCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                            CommandParameter="{Binding}"
                                            HorizontalOptions="End"
                                            IsVisible="{Binding IsTeacher}"
                                            Source="editt.png"
                                            Style="{StaticResource ImageSize30}"
                                            VerticalOptions="Start" />

                                        <!--  Student Name  -->
                                        <!--<Label
                                            Grid.Column="1"
                                            FontAttributes="Bold"
                                            FontSize="18"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="{Binding StudentFullName}" />-->
                                        <Label Grid.Column="1" HorizontalTextAlignment="Center">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span
                                                        FontAttributes="Bold"
                                                        FontFamily="ManropeBold"
                                                        FontSize="Medium"
                                                        Text="{x:Static resource:SharedResources.Text_Student}"
                                                        TextColor="{StaticResource AmericanExpress}" />
                                                    <Span Text=" : " />
                                                    <Span
                                                        BackgroundColor="GreenYellow"
                                                        FontAttributes="Bold"
                                                        FontFamily="ManropeBold"
                                                        FontSize="Medium"
                                                        Text="{Binding StudentFullName}"
                                                        TextColor="{StaticResource Black}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </Grid>


                                    <!--  Evaluation Scores with Labels in Rows  -->
                                    <Grid
                                        ColumnDefinitions="*,*"
                                        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                                        VerticalOptions="Start">

                                        <!--  Tajweed Score  -->
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            HorizontalOptions="Start"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{x:Static resource:SharedResources.Txt_Tajweed_Evaluate}" />
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="End"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{Binding TajweedScore}" />

                                        <!--  Memorization Score  -->
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            HorizontalOptions="Start"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{x:Static resource:SharedResources.Txt_Memorization_Evaluate}" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            HorizontalOptions="End"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{Binding MemorizationScore}" />

                                        <!--  Understanding Score  -->
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            HorizontalOptions="Start"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{x:Static resource:SharedResources.Txt_Understanding_Evaluate}" />
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            HorizontalOptions="End"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{Binding UnderstandingScore}" />

                                        <!--  Behavior Score  -->
                                        <Label
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            HorizontalOptions="Start"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{x:Static resource:SharedResources.Txt_Behavior_Evaluation}" />
                                        <Label
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            HorizontalOptions="End"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{Binding BehaviorScore}" />

                                        <!--  Attendance Score  -->
                                        <Label
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            HorizontalOptions="Start"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{x:Static resource:SharedResources.txt_attendanceevulate}" />
                                        <Label
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            HorizontalOptions="End"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{Binding AttendanceScore}" />

                                    </Grid>

                                    <!--  Notes Section  -->
                                    <VerticalStackLayout Spacing="5">
                                        <Label
                                            HorizontalOptions="CenterAndExpand"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{x:Static resource:SharedResources.Text_Notes}" />
                                        <Label
                                            HorizontalOptions="CenterAndExpand"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{Binding Notes}" />
                                    </VerticalStackLayout>

                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <customControls:EmptyView />
                    </CollectionView.EmptyView>
                </CollectionView>
            </Grid>

            <Grid
                Grid.Row="2"
                Margin="15"
                ColumnDefinitions="*,*"
                ColumnSpacing="5"
                HeightRequest="25"
                VerticalOptions="End">
                <Button
                    Grid.Column="0"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    Command="{Binding OpenAttendanceCommand}"
                    FontAttributes="Bold"
                    Style="{StaticResource BaseButton}"
                    Text="{x:Static resource:SharedResources.Txt_Attendance}" />
                <Button
                    Grid.Column="1"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    Command="{Binding OpenEvuluationCommand}"
                    FontAttributes="Bold"
                    Style="{StaticResource BaseButton}"
                    Text="{x:Static resource:SharedResources.evulation}" />
            </Grid>


        </Grid>
        <ActivityIndicator IsRunning="{Binding IsRunning}" IsVisible="{Binding IsRunning}" />
    </Grid>
</ContentPage>