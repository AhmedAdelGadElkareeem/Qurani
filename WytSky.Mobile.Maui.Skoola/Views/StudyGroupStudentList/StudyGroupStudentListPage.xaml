<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WytSky.Mobile.Maui.Skoola.Views.StudyGroupStudentList.StudyGroupStudentListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:WytSky.Mobile.Maui.Skoola.Views"
    xmlns:behaviors="clr-namespace:WytSky.Mobile.Maui.Skoola.Behaviors"
    xmlns:customControl="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl.Borderless"
    xmlns:customControls="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl"
    xmlns:resource="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources"
    Title="{Binding PageTitle}">
    <Grid RowDefinitions="*">

        <Grid RowDefinitions="auto,*,auto" VerticalOptions="FillAndExpand">

            <Border
                Padding="0"
                BackgroundColor="{StaticResource PrimaryColor}"
                HeightRequest="150"
                HorizontalOptions="FillAndExpand"
                Stroke="{StaticResource PrimaryColor}"
                StrokeShape="RoundRectangle 0,0,70,70"
                StrokeThickness=".5"
                VerticalOptions="Start">
                <Grid
                    Margin="0"
                    Padding="0"
                    RowDefinitions="auto,auto,auto,auto,*">
                    <Label
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont18}"
                        Text="{Binding ComplexNamee}"
                        TextColor="{StaticResource DarkBlue}" />
                    <Label
                        Grid.Row="1"
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont16}"
                        Text="{Binding CenterName}"
                        TextColor="{StaticResource DarkBlue}" />
                    <!--<Label
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont16}"
                        Text="{Binding GroupName}"
                        TextColor="{StaticResource DarkBlue}" />-->
                    <Label
                        Grid.Row="2"
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont16}"
                        Text="{Binding Name}"
                        TextColor="{StaticResource DarkBlue}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                                    FontSize="Medium"
                                    Text="{x:Static resource:SharedResources.StudyGroupName}"
                                    TextColor="{StaticResource AmericanExpress}" />
                                <Span Text=" : " />
                                <Span FontSize="Medium" Text="{Binding GroupName}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <!--<Label
                        Grid.Row="3"
                        HorizontalOptions="CenterAndExpand"
                        Style="{StaticResource BoldLabelFont16}"
                        Text="{Binding TeacherFullName}"
                        TextColor="{StaticResource DarkBlue}" />-->

                    <Label
                        Grid.Row="3"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                                    FontAttributes="Bold"
                                    FontFamily="ManropeBold"
                                    FontSize="15"
                                    Text="{x:Static resource:SharedResources.TeacherName}"
                                    TextColor="{StaticResource AmericanExpress}" />
                                <Span Text=" : " />
                                <Span
                                    FontAttributes="Bold"
                                    FontFamily="ManropeBold"
                                    FontSize="Medium"
                                    Text="{Binding TeacherFullName}"
                                    TextColor="{StaticResource Black}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Border
                        Grid.Row="4"
                        Margin="30,0,30,0"
                        Padding="0"
                        HeightRequest="40"
                        HorizontalOptions="FillAndExpand"
                        Stroke="{StaticResource Gray400}"
                        StrokeShape="RoundRectangle 20,20,20,20"
                        StrokeThickness=".5"
                        VerticalOptions="End">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Offset="0.1" Color="WhiteSmoke" />
                                <GradientStop Offset="1.0" Color="White" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Margin="0" Padding="0">
                            <!--  Entry for Search Text  -->
                            <customControl:BorderlessEntry
                                Margin="15,0"
                                FontFamily="ManropeBold"
                                Placeholder="{x:Static resource:SharedResources.SearchByName}"
                                PlaceholderColor="{StaticResource DarkBlue}"
                                Style="{StaticResource BoldLabelFont16}"
                                Text="{Binding SearchText}"
                                TextColor="{StaticResource Black}" />

                            <!--  Clear Icon Button (Left Side)  -->
                            <Button
                                BackgroundColor="Transparent"
                                Command="{Binding ClearTextCommand}"
                                HorizontalOptions="Start"
                                IsVisible="{Binding SearchText}"
                                VerticalOptions="Center">
                                <!--<Button.ImageSource>
                    <FileImageSource File="clearfilter.png" />
                    </Button.ImageSource>-->
                            </Button>
                            <Button
                                BackgroundColor="Transparent"
                                Command="{Binding SearchCommand}"
                                HorizontalOptions="End"
                                VerticalOptions="Center">
                                <Button.ImageSource>
                                    <FileImageSource File="searchicon.png" />
                                </Button.ImageSource>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!--  Student List  -->
            <Grid Grid.Row="1" IsVisible="{Binding IsStudentList}">
                <CollectionView Margin="15,10,15,0" ItemsSource="{Binding FilteredStudyGroupStudentList}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="15" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="5"
                                HeightRequest="50"
                                StrokeShape="RoundRectangle 5">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0,1">
                                        <GradientStop Offset="0.1" Color="{StaticResource PrimaryColor}" />
                                        <GradientStop Offset="1.0" Color="{StaticResource LightGreen}" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <VerticalStackLayout>
                                    <Grid ColumnDefinitions="*,auto" ColumnSpacing="15">
                                        <Frame
                                            Grid.Column="1"
                                            Margin="5,0"
                                            Padding="0"
                                            BackgroundColor="Green"
                                            CornerRadius="30"
                                            HeightRequest="28"
                                            HorizontalOptions="Start"
                                            WidthRequest="28">
                                            <Label
                                                Margin="0,5,0,0"
                                                FontAttributes="Bold"
                                                FontSize="Small"
                                                HorizontalOptions="Center"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding StudyGroupStudentNumber}"
                                                TextColor="{StaticResource White}"
                                                VerticalOptions="Start" />
                                        </Frame>
                                        <Label HorizontalOptions="CenterAndExpand">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span
                                                        FontAttributes="Bold"
                                                        FontFamily="ManropeBold"
                                                        FontSize="Medium"
                                                        Text="{x:Static resource:SharedResources.Text_Student}"
                                                        TextColor="{StaticResource AmericanExpress}" />
                                                    <Span Text=" : " />
                                                    <Span
                                                        FontAttributes="Bold"
                                                        FontFamily="ManropeBold"
                                                        FontSize="Medium"
                                                        Text="{Binding StudentFullName}"
                                                        TextColor="{StaticResource Black}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </Grid>
                                </VerticalStackLayout>

                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.StudyGroupStudentSelectedCommand}" CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <customControls:EmptyView />
                    </CollectionView.EmptyView>
                </CollectionView>
                <Button
                    Grid.Row="1"
                    Command="{Binding OpenAddStudyGroupStudentListCommand}"
                    IsVisible="{Binding IsAdminAndIsSupervisor}"
                    Style="{StaticResource AddButton}" />
            </Grid>

            <!--  Sessions List  -->
            <Grid Grid.Row="1" IsVisible="{Binding IsSessionsList}">
                <CollectionView Margin="5,5" ItemsSource="{Binding Filteredsessions}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="10"
                                Padding="10"
                                Background="{StaticResource PrimaryColor}"
                                Stroke="{StaticResource Black}"
                                StrokeShape="RoundRectangle 10,10,10,10"
                                StrokeThickness=".5">
                                <VerticalStackLayout>
                                    <Grid ColumnDefinitions="*,auto">

                                        <Frame
                                            Grid.Column="1"
                                            Margin="5,0"
                                            Padding="0"
                                            BackgroundColor="Orange"
                                            CornerRadius="30"
                                            HeightRequest="28"
                                            HorizontalOptions="Start"
                                            WidthRequest="28">
                                            <Label
                                                Margin="0,5,0,0"
                                                FontAttributes="Bold"
                                                FontSize="Small"
                                                HorizontalOptions="Center"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SessionNumber}"
                                                TextColor="{StaticResource White}"
                                                VerticalOptions="Start" />
                                        </Frame>
                                        <Label
                                            Grid.Column="0"
                                            FontAttributes="Bold"
                                            FontSize="Medium"
                                            HorizontalOptions="Center"
                                            Text="{Binding SessionDate, Converter={StaticResource DateTimeConverter}}"
                                            TextColor="{StaticResource AmericanExpress}" />
                                    </Grid>

                                    <!--  Start & End Time  -->
                                    <HorizontalStackLayout
                                        Grid.Row="2"
                                        HorizontalOptions="Center"
                                        Spacing="10">
                                        <!--  Day of the Week  -->
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Medium"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="{Binding DayOfWeekName}"
                                            TextColor="{StaticResource Black}"
                                            VerticalOptions="CenterAndExpand" />

                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="14"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="{x:Static resource:SharedResources.FromDate}"
                                            TextColor="Black"
                                            VerticalOptions="CenterAndExpand" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="15"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="{Binding StartTime, Converter={StaticResource TimeConverter}}"
                                            TextColor="{StaticResource Black}"
                                            VerticalOptions="CenterAndExpand" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="14"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="{x:Static resource:SharedResources.ToDate}"
                                            TextColor="Black"
                                            VerticalOptions="CenterAndExpand" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="15"
                                            HorizontalOptions="CenterAndExpand"
                                            Text="{Binding EndTime, Converter={StaticResource TimeConverter}}"
                                            TextColor="{StaticResource Black}"
                                            VerticalOptions="CenterAndExpand" />
                                    </HorizontalStackLayout>

                                </VerticalStackLayout>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.SelectSessionCommand}" CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <customControls:EmptyView />
                    </CollectionView.EmptyView>
                </CollectionView>
            </Grid>

            <!--  Schedules List  -->
            <Grid Grid.Row="1" IsVisible="{Binding IsSchedulesList}">
                <CollectionView x:Name="Scheduless" ItemsSource="{Binding FilteredSchedules}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="10,10"
                                Padding="10"
                                BackgroundColor="Khaki"
                                CornerRadius="10"
                                HorizontalOptions="FillAndExpand">
                                <Grid ColumnDefinitions="* ,auto">

                                    <VerticalStackLayout Spacing="10">
                                        <!--  Day of the Week  -->
                                        <Grid ColumnDefinitions="auto,*" ColumnSpacing="10">
                                            <ImageButton
                                                Margin="5"
                                                BackgroundColor="Transparent"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.OpenEditScheduleCommand}"
                                                CommandParameter="{Binding .}"
                                                HorizontalOptions="End"
                                                IsVisible="{Binding IsAdminAndIsSupervisorAndIsTeacher}"
                                                Source="editt.png"
                                                Style="{StaticResource ImageSize25}"
                                                VerticalOptions="Start" />
                                            <Label
                                                Grid.Column="1"
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                Text="{Binding DayOfWeekName}"
                                                TextColor="{StaticResource Black}" />

                                        </Grid>

                                        <!--  Start & End Time  -->
                                        <HorizontalStackLayout Spacing="10">
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="14"
                                                Text="{x:Static resource:SharedResources.FromDate}"
                                                TextColor="Black" />
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="15"
                                                Text="{Binding StartTime, Converter={StaticResource TimeConverter}}"
                                                TextColor="{StaticResource Black}" />
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="14"
                                                Text="{x:Static resource:SharedResources.ToDate}"
                                                TextColor="Black" />
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="15"
                                                Text="{Binding EndTime, Converter={StaticResource TimeConverter}}"
                                                TextColor="{StaticResource Black}" />
                                        </HorizontalStackLayout>

                                    </VerticalStackLayout>

                                    <Button
                                        Grid.Column="1"
                                        BackgroundColor="{StaticResource Green}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.SelectScheduleCommand}"
                                        CommandParameter="{Binding .}"
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        Style="{StaticResource BaseButton}"
                                        Text="{x:Static resource:SharedResources.Txt_StartSession}"
                                        TextColor="White" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <customControls:EmptyView />
                    </CollectionView.EmptyView>
                </CollectionView>
                <Button
                    Command="{Binding OpenAddScheduleCommand}"
                    HorizontalOptions="End"
                    IsVisible="{Binding IsAdminAndIsSupervisorAndIsTeacher}"
                    Style="{StaticResource AddButton}" />
            </Grid>

            <Grid Grid.Row="1" IsVisible="{Binding IsGroupSessionList}">

                <!--  Students List  -->
                <Grid
                    Grid.Row="2"
                    IsVisible="{Binding AllStudents}"
                    RowDefinitions="auto, *">
                    <Grid Grid.Row="0">
                        <Grid
                            Grid.Row="1"
                            Margin="0,10,0,5"
                            ColumnDefinitions="auto,auto,auto"
                            ColumnSpacing="10"
                            HorizontalOptions="Center">

                            <customControls:StudentAttendanceFilter
                                Grid.Row="0"
                                Grid.Column="0"
                                BackColor="Green"
                                CommanParamter="Available"
                                Command="{Binding FetchStudentsFilterCommand}"
                                TextCount="{Binding AvailableCount}"
                                TextLable="{x:Static resource:SharedResources.AvailableStudents}" />
                            <customControls:StudentAttendanceFilter
                                Grid.Row="0"
                                Grid.Column="1"
                                BackColor="{StaticResource AmericanExpress}"
                                CommanParamter="All"
                                Command="{Binding FetchStudentsFilterCommand}"
                                TextCount="{Binding All}"
                                TextLable="{x:Static resource:SharedResources.AllStudents}" />
                            <customControls:StudentAttendanceFilter
                                Grid.Row="0"
                                Grid.Column="2"
                                BackColor="{StaticResource DangerColor}"
                                CommanParamter="Absent"
                                Command="{Binding FetchStudentsFilterCommand}"
                                TextCount="{Binding AbsentCount}"
                                TextLable="{x:Static resource:SharedResources.AbsentStudents}" />

                        </Grid>
                    </Grid>

                    <!--  All Students  -->
                    <CollectionView
                        Grid.Row="1"
                        Margin="15,10,15,0"
                        ItemsSource="{Binding FilteredGroupStudents}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="15" Orientation="Vertical" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="5"
                                    Background="{StaticResource PrimaryColor}"
                                    HeightRequest="50"
                                    StrokeShape="RoundRectangle 5">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label
                                            Grid.Column="1"
                                            HorizontalOptions="End"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{Binding StudentFullName}"
                                            TextColor="{StaticResource Black}" />
                                        <Button
                                            Grid.Column="0"
                                            BackgroundColor="White"
                                            Clicked="OnAttendanceButtonClicked"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.AddStudentAttendanceCommand}"
                                            CommandParameter="{Binding .}"
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            Text="{x:Static resource:SharedResources.Txt_Attendance}"
                                            TextColor="{StaticResource DarkBlue}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <customControls:EmptyView />
                        </CollectionView.EmptyView>
                    </CollectionView>
                </Grid>

                <!--  Avialble  -->
                <Grid
                    Grid.Row="2"
                    IsVisible="{Binding AvailableStudents}"
                    RowDefinitions="auto, *">

                    <Grid Grid.Row="0">
                        <Grid
                            Grid.Row="1"
                            Margin="0,10,0,5"
                            ColumnDefinitions="auto,auto,auto"
                            ColumnSpacing="10"
                            HorizontalOptions="Center">

                            <customControls:StudentAttendanceFilter
                                Grid.Row="0"
                                Grid.Column="0"
                                BackColor="Green"
                                CommanParamter="Available"
                                Command="{Binding FetchStudentsFilterCommand}"
                                TextCount="{Binding AvailableCount}"
                                TextLable="{x:Static resource:SharedResources.AvailableStudents}" />
                            <customControls:StudentAttendanceFilter
                                Grid.Row="0"
                                Grid.Column="1"
                                BackColor="{StaticResource PrimaryColor}"
                                CommanParamter="All"
                                Command="{Binding FetchStudentsFilterCommand}"
                                TextCount="{Binding All}"
                                TextLable="{x:Static resource:SharedResources.AllStudents}" />
                            <customControls:StudentAttendanceFilter
                                Grid.Row="0"
                                Grid.Column="2"
                                BackColor="Red"
                                CommanParamter="Absent"
                                Command="{Binding FetchStudentsFilterCommand}"
                                TextCount="{Binding AbsentCount}"
                                TextLable="{x:Static resource:SharedResources.AbsentStudents}" />

                        </Grid>
                    </Grid>

                    <!--  Available Students  -->
                    <CollectionView
                        Grid.Row="1"
                        Margin="15,10,15,0"
                        ItemsSource="{Binding FilteredGroupAttendance}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="15" Orientation="Vertical" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="5"
                                    Background="{StaticResource PrimaryColor}"
                                    HeightRequest="50"
                                    StrokeShape="RoundRectangle 5">
                                    <Grid ColumnDefinitions="*">
                                        <Label
                                            Grid.Column="1"
                                            HorizontalOptions="Center"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{Binding StudentFullName}"
                                            TextColor="{StaticResource Black}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <customControls:EmptyView />
                        </CollectionView.EmptyView>
                    </CollectionView>
                </Grid>

                <!--  Absent  -->
                <Grid
                    Grid.Row="2"
                    IsVisible="{Binding AbsentStudents}"
                    RowDefinitions="auto, *">

                    <Grid Grid.Row="0">
                        <Grid
                            Grid.Row="1"
                            Margin="0,10,0,5"
                            ColumnDefinitions="auto,auto,auto"
                            ColumnSpacing="10"
                            HorizontalOptions="Center">

                            <customControls:StudentAttendanceFilter
                                Grid.Row="0"
                                Grid.Column="0"
                                BackColor="Green"
                                CommanParamter="Available"
                                Command="{Binding FetchStudentsFilterCommand}"
                                TextCount="{Binding AvailableCount}"
                                TextLable="{x:Static resource:SharedResources.AvailableStudents}" />
                            <customControls:StudentAttendanceFilter
                                Grid.Row="0"
                                Grid.Column="1"
                                BackColor="{StaticResource PrimaryColor}"
                                CommanParamter="All"
                                Command="{Binding FetchStudentsFilterCommand}"
                                TextCount="{Binding All}"
                                TextLable="{x:Static resource:SharedResources.AllStudents}" />
                            <customControls:StudentAttendanceFilter
                                Grid.Row="0"
                                Grid.Column="2"
                                BackColor="Red"
                                CommanParamter="Absent"
                                Command="{Binding FetchStudentsFilterCommand}"
                                TextCount="{Binding AbsentCount}"
                                TextLable="{x:Static resource:SharedResources.AbsentStudents}" />

                        </Grid>
                    </Grid>

                    <!--  Absent Students  -->
                    <CollectionView
                        Grid.Row="1"
                        Margin="15,10,15,0"
                        ItemsSource="{Binding FilteredGroupAttendance}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout ItemSpacing="15" Orientation="Vertical" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="5"
                                    Background="{StaticResource PrimaryColor}"
                                    HeightRequest="50"
                                    StrokeShape="RoundRectangle 5">
                                    <Grid ColumnDefinitions="*">
                                        <Label
                                            Grid.Column="1"
                                            HorizontalOptions="Center"
                                            Style="{StaticResource BoldLabelFont16}"
                                            Text="{Binding StudentFullName}"
                                            TextColor="{StaticResource Black}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <customControls:EmptyView />
                        </CollectionView.EmptyView>
                    </CollectionView>
                </Grid>
            </Grid>

            <Grid
                Grid.Row="2"
                Margin="15"
                ColumnDefinitions="*,*,*"
                ColumnSpacing="5"
                HeightRequest="50"
                VerticalOptions="End">
                <Button
                    Grid.Column="0"
                    BackgroundColor="{StaticResource Orange}"
                    Command="{Binding GetSchedulesListCommand}"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Text="{x:Static resource:SharedResources.Txt_Schedules}"
                    TextColor="{StaticResource DarkBlue}" />
                <Button
                    Grid.Column="1"
                    BackgroundColor="{StaticResource Orange}"
                    Command="{Binding GetStudentListCommand}"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Text="{x:Static resource:SharedResources.Students}"
                    TextColor="{StaticResource DarkBlue}" />
                <Button
                    Grid.Column="2"
                    BackgroundColor="{StaticResource Orange}"
                    Command="{Binding GetSessionsListCommand}"
                    CommandParameter="{Binding .}"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Text="{x:Static resource:SharedResources.Txt_Sessions}"
                    TextColor="{StaticResource DarkBlue}" />
            </Grid>
        </Grid>
        <ActivityIndicator IsRunning="{Binding IsRunning}" IsVisible="{Binding IsRunning}" />
    </Grid>
</ContentPage>