<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="WytSky.Mobile.Maui.Skoola.CustomControl.StudentAttendanceFilter"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="_root">
    <Border
        Margin="0"
        Padding="0"
        BackgroundColor="{Binding BackColor}"
        BindingContext="{x:Reference _root}"
        StrokeShape="RoundRectangle 10,10,10,10"
        StrokeThickness="0">
        <Grid
            Padding="5"
            BackgroundColor="{Binding BackColor}"
            ColumnDefinitions="*,*,*"
            ColumnSpacing="5"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand">
            <!--<Label
            FontSize="Subtitle"
            Style="{StaticResource WhiteLabel}"
            Text="{Binding TextLable}" />-->
            <Button
                Margin="5,0"
                Padding="0"
                BackgroundColor="{Binding BackColor}"
                Command="{Binding Command}"
                CommandParameter="{Binding CommandParameter}"
                Text="{Binding ButtonText}" />
            <Label
                Grid.Column="2"
                FontAttributes="Bold"
                FontSize="Medium"
                Text="{Binding TextCount}"
                TextColor="White" />
        </Grid>
    </Border>
</ContentView>
